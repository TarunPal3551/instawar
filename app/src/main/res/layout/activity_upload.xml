<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:visibility="visible"
    tools:context="com.example.hp.instawar.Upload.UploadActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Upload Images"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectbutton"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:drawableStart="@drawable/ic_upload_image"
        android:text="Select Image"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectbutton"
        android:background="@android:color/background_light"
        android:layout_marginBottom="70dp">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/relrecyler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectbutton"
        android:background="@android:color/background_light"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="Select Images to upload"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/reviewuploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:text="Review"
        android:textColor="@android:color/white" />
</RelativeLayout>
