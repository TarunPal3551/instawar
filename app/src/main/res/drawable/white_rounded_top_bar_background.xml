<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item

    android:state_pressed="true">
    <shape>
        <solid
            android:color="#ffffff"
            />
        <stroke
            android:color="#ff1810"
            android:width="1dp"
            />
        <corners
            android:radius="0dp"/>



    </shape>





</item>
    <item

        android:state_pressed="false">
        <shape>
            <solid
                android:color="#fff"
                />
            <stroke
                android:color="#ff1810"
                android:width="2dp"
                />
            <corners
                android:radius="0dp"/>



        </shape>





    </item>



</selector>